    <script>
        function openCity(evt, cityName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (
                i = 0; i < tabcontent.length; i++) { tabcontent[i].style.display = "none"; }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) { tablinks[i].className = tablinks[i].className.replace(" active", ""); }
            document.getElementById(cityName).style.display = "block"; evt.currentTarget.className += " active";
        }

        function PopulateTable(tablePar,tableRecord) {
           
            var table = document.getElementById(tablePar);
            table.innerHTML = "";

            // Select all table rows from each tab
            var records = document.getElementsByClassName(tableRecord);
            var filteredRecords = []
            //Filters out Table rows without QTY value
            for(var i = 0;i<records.length;i++){
                var tempRecord = records[i].querySelector(".Qty");
                if(tempRecord.value !== ""){
                        //console.log(i);
                        filteredRecords.push(records[i]);  
                }
                console.log(tempRecord.value);
            }


            // Iterate over each record
            filteredRecords.forEach(function (row) {
                // Create a new row for the populated table
                    var newRow = table.insertRow();
                    // Iterate over each cell in the record
                row.querySelectorAll("td").forEach(function (cell) {
                    // Create a new cell for the populated table

                    var newCell = newRow.insertCell();

                    // Check if the cell contains an input element
                    var inputElement = cell.querySelector("input");
                    if (inputElement) {
                        // If an input element is found, use its value
                        newCell.textContent = inputElement.value;
                    } else {
                        // Otherwise, use the text content of the cell
                        newCell.textContent = cell.textContent;
                    }
                });
                
                

                
            });
        }
    </script>
